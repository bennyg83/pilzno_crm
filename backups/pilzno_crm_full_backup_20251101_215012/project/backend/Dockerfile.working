FROM node:18-alpine

WORKDIR /app

# Install ts-node globally to avoid permission issues
RUN npm install -g ts-node typescript

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start with ts-node directly
CMD ["npx", "ts-node", "src/index.ts"]
